<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cell"
    android:padding="@dimen/padding_cell" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/groupName"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/listTitle"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popupBtn"
        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:layout_alignBottom="@+id/groupName"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/listTitle"
        android:layout_marginRight="@dimen/popup_margin_right"
        android:clickable="true"
        android:onClick="showListPopup"
        android:contentDescription="@string/menu" />

</RelativeLayout>