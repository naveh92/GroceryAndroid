<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm"
        android:src="@drawable/v"
        android:background="@null"
        android:layout_below="@+id/groupTitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/confirm_btn_margin_top"
        android:layout_marginBottom="@dimen/confirm_btn_margin_bottom"
        android:contentDescription="@string/confirm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/group_name"
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/input_tv_margin_top"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/input_tv_margin_left" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupTitleText"
        android:layout_marginRight="@dimen/input_et_margin_right"
        android:layout_marginLeft="@dimen/input_et_margin_left"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"
        android:singleLine="true" />

</RelativeLayout>
